{
  "name": "what-do-you-say-server",
  "version": "1.0.0",
  "description": "What do you say Server",
  "main": "src/index.ts",
  "keywords": [],
  "author": "HyoSeok & SangYoon",
  "license": "ISC",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Nexters/what-do-you-say-server.git"
  },
  "bugs": {
    "url": "https://github.com/Nexters/what-do-you-say-server/issues"
  },
  "scripts": {
    "pretty": "prettier --config .prettierrc --write \"{src,test}/**/*.ts\"",
    "lint": "eslint src/**/*.ts && eslint test/**/*.ts",
    "lint-fix": "eslint --fix src/**/*.ts && eslint test/**/*.ts",
    "test": "jest -i --forceExit",
    "type-check": "tsc --noEmit",
    "build:js": "babel src --out-dir dist --extensions '.ts'",
    "build": "npm run type-check && npm run build:js",
    "start": "nodemon -e ts -x env DEBUG=* ts-node -r tsconfig-paths/register src/index.ts",
    "prod": "env DEBUG=app*,error*,http pm2 reload ecosystem.config.js && pm2 list"
  },
  "dependencies": {
    "awilix": "^4.2.6",
    "awilix-express": "^3.0.0",
    "class-validator": "^0.12.2",
    "cors": "^2.8.5",
    "date-fns": "^2.14.0",
    "debug": "^4.1.1",
    "dotenv-safe": "^8.2.0",
    "express": "^4.17.1",
    "jsend": "^1.1.0",
    "lodash": "^4.17.19",
    "morgan": "^1.10.0",
    "mysql2": "^2.1.0",
    "pm2": "^4.4.0",
    "swagger-jsdoc": "^4.0.0",
    "swagger-ui-express": "^4.1.4",
    "typeorm": "^0.2.25",
    "typeorm-naming-strategies": "^1.1.0"
  },
  "devDependencies": {
    "@babel/cli": "^7.10.5",
    "@babel/core": "^7.10.5",
    "@babel/node": "^7.10.5",
    "@babel/plugin-proposal-class-properties": "^7.10.4",
    "@babel/plugin-proposal-decorators": "^7.10.5",
    "@babel/plugin-proposal-export-default-from": "^7.10.4",
    "@babel/plugin-syntax-import-meta": "^7.10.4",
    "@babel/plugin-transform-destructuring": "^7.10.4",
    "@babel/plugin-transform-modules-commonjs": "^7.10.4",
    "@babel/plugin-transform-runtime": "^7.10.5",
    "@babel/plugin-transform-typescript": "^7.10.5",
    "@babel/preset-env": "^7.10.4",
    "@babel/preset-typescript": "^7.10.4",
    "@types/cors": "^2.8.6",
    "@types/date-fns": "^2.6.0",
    "@types/debug": "^4.1.5",
    "@types/dotenv-safe": "^8.1.0",
    "@types/express": "^4.17.7",
    "@types/jest": "^26.0.4",
    "@types/jsend": "^1.0.28",
    "@types/lodash": "^4.14.157",
    "@types/morgan": "^1.9.1",
    "@types/node": "^14.0.23",
    "@types/supertest": "^2.0.10",
    "@types/swagger-jsdoc": "^3.0.2",
    "@types/swagger-ui-express": "^4.1.2",
    "@typescript-eslint/eslint-plugin": "^3.6.1",
    "@typescript-eslint/parser": "^3.6.1",
    "babel-jest": "^26.1.0",
    "babel-plugin-module-resolver": "^4.0.0",
    "babel-plugin-transform-typescript-metadata": "^0.3.0",
    "eslint": "^7.4.0",
    "eslint-config-airbnb-base": "^14.2.0",
    "eslint-config-airbnb-typescript": "^8.0.2",
    "eslint-config-prettier": "^6.11.0",
    "eslint-import-resolver-typescript": "^2.0.0",
    "eslint-plugin-import": "^2.22.0",
    "eslint-plugin-prettier": "^3.1.4",
    "husky": "^4.2.5",
    "jest": "^26.1.0",
    "jest-cli": "^26.1.0",
    "lint-staged": "^10.2.11",
    "nodemon": "^2.0.4",
    "prettier": "^2.0.5",
    "supertest": "^4.0.2",
    "ts-jest": "^26.1.2",
    "ts-node": "^8.10.2",
    "typescript": "^3.9.6",
    "typescript-babel-jest": "^1.0.6"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "{src,test}/**/*": [
      "npm run pretty",
      "npm run lint"
    ]
  }
}
